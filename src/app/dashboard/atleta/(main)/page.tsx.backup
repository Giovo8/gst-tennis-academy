"use client";

import { useEffect, useState } from "react";
import Link from "next/link";
import { supabase } from "@/lib/supabase/client";
import {
  Calendar,
  Trophy,
  CreditCard,
  Video,
  TrendingUp,
  CheckCircle,
  Activity,
  Target,
  Award,
  BookOpen,
} from "lucide-react";
import { StatsCard } from "@/components/dashboard/StatsCard";
import { ChartCard } from "@/components/dashboard/ChartCard";
import { ReminderCard } from "@/components/dashboard/ReminderCard";
import { ProjectList } from "@/components/dashboard/ProjectList";
import { ProgressCard } from "@/components/dashboard/ProgressCard";
import { TimeTracker } from "@/components/dashboard/TimeTracker";

interface Stats {
  creditsAvailable: number;
  weeklyCredits: number;
  upcomingBookings: number;
  activeTournaments: number;
  completedLessons: number;
}

interface Booking {
  id: string;
  court: string;
  type: string;
  start_time: string;
  end_time: string;
  status: string;
}

export default function AtletaDashboard() {
  const [stats, setStats] = useState<Stats>({
    creditsAvailable: 0,
    weeklyCredits: 0,
    upcomingBookings: 0,
    activeTournaments: 0,
    completedLessons: 0,
  });
  const [nextBookings, setNextBookings] = useState<Booking[]>([]);
  const [loading, setLoading] = useState(true);
  const [userName, setUserName] = useState("");

  useEffect(() => {
    loadDashboardData();
  }, []);

  async function loadDashboardData() {
    const { data: { user } } = await supabase.auth.getUser();
    if (!user) return;

    // Load profile
    const { data: profile } = await supabase
      .from("profiles")
      .select("full_name")
      .eq("id", user.id)
      .single();

    if (profile) setUserName(profile.full_name || "Atleta");

    // Load credits
    const { data: credits } = await supabase
      .from("subscription_credits")
      .select("credits_available, weekly_credits")
      .eq("user_id", user.id)
      .single();

    // Load upcoming bookings
    const now = new Date().toISOString();
    const { data: bookings, count: bookingsCount } = await supabase
      .from("bookings")
      .select("id, court, type, start_time, end_time, status", { count: "exact" })
      .eq("user_id", user.id)
      .neq("status", "cancelled")
      .gte("start_time", now)
      .order("start_time", { ascending: true })
      .limit(3);

    // Load tournament participations
    const { data: participations } = await supabase
      .from("tournament_participants")
      .select("tournament_id")
      .eq("user_id", user.id);

    setStats({
      creditsAvailable: credits?.credits_available || 0,
      weeklyCredits: credits?.weekly_credits || 0,
      upcomingBookings: bookingsCount || 0,
      activeTournaments: participations?.length || 0,
      completedLessons: 24,
    });

    setNextBookings(bookings || []);
    setLoading(false);
  }

  // Mock data per il grafico
  const weeklyActivity = [
    { day: "L", value: 2 },
    { day: "M", value: 3 },
    { day: "M", value: 1 },
    { day: "G", value: 4 },
    { day: "V", value: 2 },
    { day: "S", value: 3 },
    { day: "D", value: 1 },
  ];

  const reminders = nextBookings.slice(0, 1).map((booking) => ({
    id: booking.id,
    title: `Prenotazione ${booking.court}`,
    time: `${new Date(booking.start_time).toLocaleDateString("it-IT")} • ${new Date(
      booking.start_time
    ).toLocaleTimeString("it-IT", { hour: "2-digit", minute: "2-digit" })}`,
    type: "booking" as const,
  }));

  const activities = [
    {
      id: "1",
      title: "Allenamento Tecnico",
      subtitle: "Prossimo: Lunedì 14:00",
      icon: Target,
      color: "blue",
    },
    {
      id: "2",
      title: "Video Lezioni",
      subtitle: `${stats.completedLessons} completate`,
      icon: Video,
      color: "purple",
    },
    {
      id: "3",
      title: "Tornei Attivi",
      subtitle: `${stats.activeTournaments} iscrizioni`,
      icon: Trophy,
      color: "green",
    },
    {
      id: "4",
      title: "Crediti Disponibili",
      subtitle: `${stats.creditsAvailable} rimanenti`,
      icon: CreditCard,
      color: "orange",
    },
  ];

  if (loading) {
    return (
      <div className="space-y-6 animate-pulse">
        <div className="h-24 bg-gray-200 dark:bg-gray-800 rounded-2xl" />
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {[...Array(4)].map((_, i) => (
            <div key={i} className="h-32 bg-gray-200 dark:bg-gray-800 rounded-2xl" />
          ))}
        </div>
      </div>
    );
  }

  return (
    <div className="space-y-6 pb-8">
      {/* Header */}
      <div className="rounded-2xl border border-gray-200 bg-gradient-to-br from-gray-50 to-white p-6 shadow-sm dark:border-gray-800 dark:from-gray-900 dark:to-gray-800">
        <div className="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 className="text-3xl font-bold text-gray-900 dark:text-white mb-2">
              Dashboard
            </h1>
            <p className="text-gray-600 dark:text-gray-400">
              Monitora i tuoi progressi e gestisci i tuoi allenamenti.
            </p>
          </div>
          <div className="flex items-center gap-3">
            <Link
              href="/dashboard/atleta/(main)/subscription"
              className="rounded-xl border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-all hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
            >
              Gestisci Abbonamento
            </Link>
            <Link
              href="/dashboard/atleta/(main)/bookings/new"
              className="rounded-xl bg-emerald-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-emerald-700"
            >
              + Nuova Prenotazione
            </Link>
          </div>
        </div>
      </div>

      {/* Stats Grid */}
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <StatsCard
          title="Crediti Disponibili"
          value={stats.creditsAvailable}
          icon={CreditCard}
          color="green"
          trend={{
            value: stats.weeklyCredits,
            label: "Crediti settimanali",
            isPositive: true,
          }}
        />
        <StatsCard
          title="Prenotazioni"
          value={stats.upcomingBookings}
          icon={Calendar}
          color="blue"
          trend={{
            value: stats.upcomingBookings,
            label: "Prossime sessioni",
            isPositive: true,
          }}
        />
        <StatsCard
          title="Tornei Attivi"
          value={stats.activeTournaments}
          icon={Trophy}
          color="purple"
          trend={{
            value: stats.activeTournaments,
            label: "In corso",
            isPositive: true,
          }}
        />
        <StatsCard
          title="Lezioni Completate"
          value={stats.completedLessons}
          icon={Award}
          color="orange"
          trend={{
            value: 12,
            label: "Questo mese",
            isPositive: true,
          }}
        />
      </div>

      {/* Main Content Grid */}
      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {/* Left Column - 2/3 */}
        <div className="lg:col-span-2 space-y-6">
          {/* Chart */}
          <ChartCard title="Attività Settimanale" data={weeklyActivity} />

          {/* Upcoming Bookings */}
          <div className="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
            <div className="mb-4 flex items-center justify-between">
              <h3 className="text-lg font-semibold text-gray-900 dark:text-white">
                Prossime Prenotazioni
              </h3>
              <Link
                href="/dashboard/atleta/(main)/bookings"
                className="text-sm font-medium text-emerald-600 hover:text-emerald-700 dark:text-emerald-400"
              >
                Vedi tutte
              </Link>
            </div>
            <div className="space-y-3">
              {nextBookings.length === 0 ? (
                <p className="text-sm text-gray-500 dark:text-gray-400">
                  Nessuna prenotazione in programma
                </p>
              ) : (
                nextBookings.map((booking) => (
                  <div
                    key={booking.id}
                    className="flex items-center justify-between rounded-xl border border-gray-100 bg-gray-50/50 p-4 dark:border-gray-800 dark:bg-gray-800/50"
                  >
                    <div className="flex items-center gap-3">
                      <div className="rounded-lg bg-emerald-100 p-2 dark:bg-emerald-900/30">
                        <Calendar className="h-5 w-5 text-emerald-600 dark:text-emerald-400" />
                      </div>
                      <div>
                        <p className="font-medium text-gray-900 dark:text-white">
                          {booking.court}
                        </p>
                        <p className="text-sm text-gray-500 dark:text-gray-400">
                          {new Date(booking.start_time).toLocaleDateString("it-IT")} •{" "}
                          {new Date(booking.start_time).toLocaleTimeString("it-IT", {
                            hour: "2-digit",
                            minute: "2-digit",
                          })}
                        </p>
                      </div>
                    </div>
                    <span className="text-sm text-gray-500 dark:text-gray-400">
                      {booking.type}
                    </span>
                  </div>
                ))
              )}
            </div>
          </div>
        </div>

        {/* Right Column - 1/3 */}
        <div className="space-y-6">
          {/* Reminders */}
          {reminders.length > 0 && <ReminderCard reminders={reminders} />}

          {/* Activities List */}
          <ProjectList projects={activities} />

          {/* Time Tracker */}
          <TimeTracker />
        </div>
      </div>

      {/* Bottom Grid */}
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {/* Progress */}
        <ProgressCard
          title="Progressi Mensili"
          percentage={65}
          stats={{
            completed: stats.completedLessons,
            inProgress: stats.upcomingBookings,
            pending: 5,
          }}
        />

        {/* Quick Links */}
        <div className="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
          <h3 className="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
            Accesso Rapido
          </h3>
          <div className="grid grid-cols-2 gap-3">
            <Link
              href="/dashboard/atleta/(main)/bookings"
              className="rounded-xl border border-gray-200 bg-gray-50 p-4 text-center transition-all hover:border-emerald-500 hover:bg-emerald-50 dark:border-gray-800 dark:bg-gray-800 dark:hover:border-emerald-600 dark:hover:bg-emerald-900/20"
            >
              <Calendar className="mx-auto h-6 w-6 text-gray-600 dark:text-gray-400" />
              <p className="mt-2 text-sm font-medium text-gray-900 dark:text-white">
                Prenotazioni
              </p>
            </Link>
            <Link
              href="/dashboard/atleta/(main)/tornei"
              className="rounded-xl border border-gray-200 bg-gray-50 p-4 text-center transition-all hover:border-emerald-500 hover:bg-emerald-50 dark:border-gray-800 dark:bg-gray-800 dark:hover:border-emerald-600 dark:hover:bg-emerald-900/20"
            >
              <Trophy className="mx-auto h-6 w-6 text-gray-600 dark:text-gray-400" />
              <p className="mt-2 text-sm font-medium text-gray-900 dark:text-white">Tornei</p>
            </Link>
            <Link
              href="/dashboard/atleta/(main)/videos"
              className="rounded-xl border border-gray-200 bg-gray-50 p-4 text-center transition-all hover:border-emerald-500 hover:bg-emerald-50 dark:border-gray-800 dark:bg-gray-800 dark:hover:border-emerald-600 dark:hover:bg-emerald-900/20"
            >
              <Video className="mx-auto h-6 w-6 text-gray-600 dark:text-gray-400" />
              <p className="mt-2 text-sm font-medium text-gray-900 dark:text-white">Video</p>
            </Link>
            <Link
              href="/dashboard/atleta/(main)/profile"
              className="rounded-xl border border-gray-200 bg-gray-50 p-4 text-center transition-all hover:border-emerald-500 hover:bg-emerald-50 dark:border-gray-800 dark:bg-gray-800 dark:hover:border-emerald-600 dark:hover:bg-emerald-900/20"
            >
              <BookOpen className="mx-auto h-6 w-6 text-gray-600 dark:text-gray-400" />
              <p className="mt-2 text-sm font-medium text-gray-900 dark:text-white">Profilo</p>
            </Link>
          </div>
        </div>
      </div>
    </div>
  );
}
